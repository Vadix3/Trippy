<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_LAY_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">
    <!-- TODO: Add timezone-->
    <RelativeLayout
        android:id="@+id/main_LAY_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <!--TODO: Add edit text on this place to change title-->
        <TextView
            android:id="@+id/main_LBL_welcomeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Welcome to Israel!"
            android:textColor="@color/coolBlue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/main_IMG_flagImage"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-70dp"
            android:rotation="-45"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_LAY_infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_LAY_buttonsGrid"
        android:layout_below="@id/main_LAY_titleLayout">

        <TextView
            android:id="@+id/main_LBL_currencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="1 EUR = X ILS"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/main_LBL_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_LBL_currencyLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="31c Sunny"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/main_LBL_tripdateslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_LBL_weather"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="7-13 September"
            android:textSize="15sp"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/main_LAY_eventsList"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/main_LBL_tripdateslabel"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/main_LAY_buttonsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_addCalenderEvent"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Add Calendar event"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:strokeColor="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_Translator"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Translator"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_openMap"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Open Map"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_directions"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Get Directions"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </GridLayout>

</RelativeLayout>