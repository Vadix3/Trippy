<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/placeDialog_LAY_placeDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/placeDialog_LBL_placeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Place Name"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placeDialog_LBL_placeAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeDialog_LBL_placeName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Place Address"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/placeDialog_LBL_placeRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeDialog_LBL_placeAddress"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Place Rating"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/placeDialog_LTS_hoursList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/placeDialog_LBL_placeRating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/placeDialog_IMG_placeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/placeDialog_LTS_hoursList"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:gravity="center" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/placeDialog_BTN_exitButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@color/searchBarHintColor"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_close_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/ampm_label_size" />
</RelativeLayout>